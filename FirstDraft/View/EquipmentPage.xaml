<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstDraft.View.EquipmentPage"
             xmlns:support ="clr-namespace:FirstDraft.Support"
             xmlns:viewModel ="clr-namespace:FirstDraft.ViewModel"
             xmlns:entities ="clr-namespace:FirstDraft.Model.DatabaseFramework.Entities"
             x:DataType="viewModel:EquipmentPageVM"
             Title="EquipmentPage">
    <ContentPage.Resources>
        <support:DateOnlyToString x:Key="dateToString" />

    </ContentPage.Resources>
    <Grid ColumnDefinitions="50,Auto,Auto,50"
          RowDefinitions="50,500,Auto,Auto,Auto,50">

        <Grid Grid.Column="1" Grid.Row="1"
              RowDefinitions="50,Auto,Auto,300">
            <Label 
                Grid.Row="1"
                Text="Equipment Page"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <Button 
                Grid.Row="2"
                Text="Load Equipment" Command="{Binding RefreshEquipment}"/>


            <ListView Grid.Row="3"  ItemsSource="{Binding LocalEquipment}">
                <ListView.ItemTemplate>
                    <DataTemplate  x:DataType="entities:Equipment">
                        <ViewCell>

                            <Frame>
                                <Grid ColumnDefinitions="Auto,Auto,Auto,*">
                                    <Label Grid.Column="0" Text="{Binding Quantity}" Padding="10"/>
                                    <Label Grid.Column="1" Text="{Binding Name}" Padding="10"/>
                                    <Label Grid.Column="2" Text="{Binding DayOfPurchase,Converter={StaticResource dateToString}}" Padding="10"/>
                                    <Label Grid.Column="3" Text="{Binding Location}" Padding="10"/>
                                </Grid>
                                <Frame.GestureRecognizers >
                                    <DragGestureRecognizer 
                                            DragStartingCommand="{Binding Source={x:RelativeSource AncestorType={x:Type viewModel:EquipmentPageVM}},Path=DragEquipment}" 
                                            DragStartingCommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>
                            </Frame>


                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Grid Grid.Column="2" Grid.Row="1" 
            RowDefinitions="50,Auto,300">
        <Label Text="Equipment To transfer" Grid.Row="1"/>
        <Frame Grid.Row="2">
            <ListView ItemsSource="{Binding EquipmentToTransfer}" VerticalScrollBarVisibility="Always">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="entities:Equipment">
                                <ViewCell>
                                    <Label Text="{Binding Name}"/>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                    </ListView>
       
                <Frame.GestureRecognizers>
                    <DropGestureRecognizer 
                        DropCommand="{Binding Source={x:RelativeSource AncestorType={x:Type viewModel:EquipmentPageVM}},Path=DropEquipment}"/>

                </Frame.GestureRecognizers>
            </Frame>
        </Grid>

        <Label
            Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="2"
            Text="Přemístit vybrané vybavení do kategorie:"/>
        <HorizontalStackLayout
            x:Name="RadioButtons"
            Grid.Column="1" Grid.Row="3" 
            RadioButtonGroup.GroupName="Kategorie"
            RadioButtonGroup.SelectedValue="{Binding Selection}">
            <RadioButton Content="transport" Value="transport"/>
            <RadioButton Content="festival" Value="festival"/>
            <RadioButton Content="sklad" Value="warehouse"/>
            <RadioButton Content="koš" Value="bin"/>
            
        </HorizontalStackLayout>
        <Label x:Name="animalLabel"
               Grid.Column="1"
               Grid.Row="4">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="You have chosen:" />
                    <Span Text="{Binding Selection}" />
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Button 
            Text="Vybrat zástupce v kategorii: "
            Grid.Column="2" Grid.Row="3" 
            Command="{Binding NavToTransferPageCommand}"/>


    </Grid>
</ContentPage>